@model ASM.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorProducts)
        </dt>
        <dd class="col-sm-2">
            @if (Model.AuthorProducts.Any())
            {
                var authorNames = Model.AuthorProducts.Select(ap => ap.Author.AuthorName);
                <span>@string.Join(", ", authorNames)</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryProducts)
        </dt>
        <dd class="col-sm-2">
            @if (Model.CategoryProducts.Any())
            {
                var categoryNames = Model.CategoryProducts.Select(cp => cp.Category.CategoryName);
                <span>@string.Join(", ", categoryNames)</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ProductImage)" style="height:400px">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
