@model List<Order>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Order Total Price</th>
			<th>Product Name</th>
			<th>Order Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
				<td>@order.OrderId</td>
				<td>@order.CustomerId</td>
				<td>@order.OrderDate.ToShortDateString()</td>
				<td>$@order.OrderTotalPrice</td>
				<td>
					@foreach (var orderDetail in @order.OrderDetails)
					{
						@orderDetail.Product.ProductName
                        <br />
					}
				</td>
                    
				<td>@order.OrderStatus.StatusName</td>
                <td>
                    <form method="post" action="@Url.Action("VerifyOrder?id=${@order.OrderId}")">
                        <button type="submit">Verify Existing Orders</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
